<% if @coffeespots.any? %>
    <h2>CoffeeSpots</h2>
    <ul>
        <% @coffeespots.each do |coffeespot| %>
            <div>
                <p>Name: <%= coffeespot.name %></p>
                <p>Url: <%= link_to "#{coffeespot.url}", coffeespot.url %></p>
                <% if coffeespot.reviews.any? %>
                    <p>Reviews:</p>
                    <ul>
                        <% coffeespot.reviews.each do |review| %>
                            <li><%= review.thoughts %> (<%= review.rating %>)</li>
                        <% end %>
                    </ul>
                <% else %>
                    <p>Reviews: No reviews yet</p>
                <% end %>
                <% if user_signed_in? %>
                    <p>
                        <%= link_to 'Review', new_coffeespot_review_path(coffeespot.id) %>

                        <%= link_to 'Edit', edit_coffeespot_path(coffeespot.id) %>
     
                        <%= link_to 'Delete', coffeespot_path(coffeespot.id), method: :delete, data: { confirm: "Are you sure?" } %>
                    </p>
                <% end %>
            </div>
        <% end %>
    </ul>
<% else %>
    <p>No Coffee Spots yet</p>
<% end %>

<%= link_to 'Add CoffeeSpot', new_coffeespot_path %>



